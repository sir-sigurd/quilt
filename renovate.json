{
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":dependencyDashboardApproval"
  ],
  "enabledManagers": [
    "npm",
    "dockerfile"
  ],
  "rangeStrategy": "bump",
  "labels": [
    "js dependencies"
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "labels": ["docker"],
      "major": {
        "enabled": false
      },
      "dependencyDashboardApproval": false,
      "additionalBranchPrefix": "{{parentDir}}-",
      "commitMessageSuffix": " in {{packageFileDir}} ({{newMajor}}|{{newMinor}}|{{newPatch}})"
    },
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["public.ecr.aws/lambda/python"],
      "minor": {
        "enabled": false
      },
      "separateMinorPatch": true
    }
  ]
}
